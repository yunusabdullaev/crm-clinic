# Environment
ENVIRONMENT=development
SERVICE_NAME=medical-crm

# Server
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30

# MongoDB
MONGO_URI=mongodb://localhost:27017/crm-clinic
MONGO_DB=medical_crm
MONGO_TIMEOUT=10

# JWT (Change these in production!)
JWT_ACCESS_SECRET=change-this-to-a-very-secure-secret-key-32-chars
JWT_REFRESH_SECRET=change-this-to-another-secure-secret-key-32ch
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800

# Superadmin (Change password in production!)
SUPERADMIN_EMAIL=admin@crm.local
SUPERADMIN_PASSWORD=Admin123!

# Email (Resend - get key from resend.com)
RESEND_API_KEY=re_xxxxxxxxx
FRONTEND_URL=https://your-frontend.vercel.app
